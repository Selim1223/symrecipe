{% extends "base.html.twig" %}

{% block title %} Symrecipe - Nouvelle recette {% endblock %}

{% block body %}
<div class="container">
<h4 class="mt-4">Cr√©ation d'une recette</h4>

{{ form_start(form) }}



    {{ form_label(form.imageFile) }}
    <br>
    <div class="form-group">
        {{ form_widget(form.imageFile) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form.imageFile) }}
        </div>
    </div>
    
    <div class="form-group">
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form.name) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.time) }}
        {{ form_widget(form.time) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form.time) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.nbPeople) }}
        {{ form_widget(form.nbPeople) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form.nbPeople) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.difficulty) }}
        {{ form_widget(form.difficulty) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form.difficulty) }}
        </div>
    </div>

     <div class="form-group">
        {{ form_label(form.description) }}
        {{ form_widget(form.description) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form.description) }}
        </div>
    </div>


    <div class="form-group">
        {{ form_label(form.price) }}
        {{ form_widget(form.price) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form.price) }}
        </div>
    </div>

    <div class="form-check mt-4">
        {{ form_label(form.isFavorite) }}
        {{ form_widget(form.isFavorite) }}
    </div>


    {{ form_label(form.ingredients) }}
	<br>
	<div id="ingredients-wrapper">
		{% for field in form.ingredients %}
			<div style="min-width: 10%;">
				{{ form_widget(field) }}
				{{ form_label(field) }}
			</div>
		{% endfor %}
	</div>


    {{form_row(form.submit)}}
        
{{ form_end(form) }}

</div>
{% endblock %}